@page "/user/verify/{Token}"
@inherits PageBase

<Spinner IsVisible=@isBusy />

<div style="@(VisibleIf(isLoaded))" class="body-div">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="confirmation-container">
                <!-- Success Section -->
                <div style="@(VisibleIf(success))">
                    <div class="icon-container">
                        <i class="bi bi-check-circle-fill success-icon"></i>
                    </div>
                    <h2 class="confirmation-title">Email Confirmed!</h2>
                    <p class="confirmation-message">@(message)</p>
                    <a href="#" @onclick="() => Navigate(URLs.Login)" class="btn btn-primary action-button">Log In Now</a>
                </div>

                <!-- Expired Section -->
                <div style="@(VisibleIf(fail))">
                    <div class="icon-container">
                        <i class="bi bi-exclamation-circle-fill expired-icon"></i>
                    </div>
                    <h2 class="confirmation-title">Sorry</h2>
                    <p class="confirmation-message">@(message)</p>
                </div>
            </div>
        </div>
    </div>
</div>