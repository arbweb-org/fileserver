@page "/"
@inherits PageBase

<div class="body-div">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="login-container">
                <div class="login-header">
                    <h2>Welcome Back</h2>
                    <p class="text-muted">Enter your credentials to access your account</p>
                </div>

                <div style="@(VisibleIf(fail))" class="alert alert-danger" id="error-message" role="alert">
                    @(message)
                </div>

                <form id="login-form">
                    <div class="form-floating">
                        <input @bind-value="email" @bind-value:event="oninput" type="email" class="form-control" id="email" placeholder="name@example.com" required>
                        <label for="email">Email address</label>
                    </div>

                    <div class="form-floating">
                        <input @bind-value="password" @bind-value:event="oninput" type="password" class="form-control" id="password" placeholder="Password" required>
                        <label for="password">Password</label>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember-me">
                            <label class="form-check-label" for="remember-me">
                                Remember me
                            </label>
                        </div>
                        <div>
                            <a href="/user/password" class="text-decoration-none">Forgot password?</a>
                        </div>
                    </div>

                    <button type="button" @onclick="LoginClicked" class="btn btn-primary submit-btn">Log In</button>

                    <div class="register-link">
                        <p>Don't have an account? <a href="/user/register" class="text-decoration-none">Register here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>